@model Fresh0._1.Models.cl_geo_departamentos

@{
    ViewBag.Title = "Agregar Nuevo";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Departamentos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.depcod, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.depcod, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.depcod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.depnom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.depnom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.depnom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.depest, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.depest, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.depest, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.depusualt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.depusualt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.depusualt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-6 col-md-3">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Departamentos/Index")'" value="Regresar" />
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
